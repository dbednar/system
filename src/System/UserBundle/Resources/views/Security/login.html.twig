{% extends "SystemUserBundle::loyout.html.twig" %}
{% block panel %}

    <div class="container">
        <div class='col-md-4 col-md-offset-4'>
            {% if error is defined and error != "" %}
                <div style="padding-top:10%;">    <div class="alert alert-block alert-danger fade in abs">{{ error.message|trans({}, 'FOSUserBundle') }}</div></div>
                {% endif %}

            <form class="form-signin" method='POST' action="{{path ('fos_user_security_check')}}">
                <h2 class="form-signin-heading">
                    <p><img src="img/logo.png" height="75"></p>
                   System
                </h2>
                <div class="login-wrap">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="text" name="_username" class="form-control" placeholder="User ID" autofocus>
                    <input type="password" name="_password" class="form-control" placeholder="Password">
                    <input type="checkbox" id='checbox' name="_remember_me" selected> Remember me
                    <span class="pull-right">
                        <a data-toggle="modal" href="#myModal"> Forgot Password?</a>

                    </span>
                    <label class="checkbox" id='checbox'></label>


                    <button name=loginbut class="btn btn-lg btn-login btn-block" type="submit" value="Login">Sign in</button>

                </div>
            </form>
        </div>  

        <!-- Modal -->
        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
            <div class="modal-dialog">

                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Forgot Password ?</h4>
                    </div>
                    <form action="" method="POST"id='form'>
                        <div id='info' style="padding-top:2%;" class="col-md-offset-3"></div>  
                        <div class="modal-body">
                            <p>Enter your e-mail address below to reset your password.</p>
                            <input type="email" id="username" name="username" required="required" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                            <button id='resetPassword' class="btn btn-success" type="submit" data-loading-text="<i class='fa fa-circle-o-notch fa-spin '></i> Send">Submit</button>
                        </div>
                    </form>
                </div>


            </div>
        </div>
        <!-- modal -->
    </div>
    <!-- js placed at the end of the document so the pages load faster -->


{% endblock %} 
{% block js %}
    {{parent()}}


{% endblock %}    
